<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" styleClass="main-bg-color" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gpts.java.controllers.EmployeeWorksController">
   <stylesheets>
      <URL value="@../css/main.css" />
   </stylesheets>
   <children>
      <AnchorPane>
         <children>
            <HBox alignment="CENTER_RIGHT" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <JFXButton fx:id="uiAddBtn" text="Ekle">
                     <graphic>
                        <FontAwesomeIconView glyphName="PLUS" styleClass="content-btn-icon" />
                     </graphic>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="content-btn" />
                        <String fx:value="content-btn-default" />
                     </styleClass>
                  </JFXButton>
               </children>
            </HBox>
            <HBox AnchorPane.leftAnchor="0.0">
               <children>
                  <Label styleClass="content-header" text="İşler">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </AnchorPane>
      <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <JFXComboBox fx:id="uiFilterInput" labelFloat="true" prefHeight="25.0" prefWidth="118.0" promptText="Filtre" styleClass="text-field-popup-style" />
            <JFXButton fx:id="uiFilterActionBtn" text="Uygula">
               <styleClass>
                  <String fx:value="content-btn" />
                  <String fx:value="content-btn-warning" />
               </styleClass>
            </JFXButton>
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <FlowPane fx:id="uiBoxContainer" alignment="TOP_CENTER" hgap="10.0" prefHeight="200.0" prefWidth="200.0" vgap="10.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding></FlowPane>
      <JFXButton fx:id="uiMoreBtn" text="Daha Fazla">
         <styleClass>
            <String fx:value="content-btn" />
            <String fx:value="content-btn-warning" />
         </styleClass>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </JFXButton>
   </children>
</VBox>
