<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="main-bg-color" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gpts.java.controllers.TasksController">
   <stylesheets>
      <URL value="@../css/main.css" />
   </stylesheets>
   <children>
      <AnchorPane>
         <children>
            <HBox alignment="CENTER_RIGHT" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <JFXButton fx:id="uiAddBtn" text="Ekle">
                     <graphic>
                        <FontAwesomeIconView glyphName="PLUS" styleClass="content-btn-icon" />
                     </graphic>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="content-btn" />
                        <String fx:value="content-btn-default" />
                     </styleClass>
                  </JFXButton>
               </children>
            </HBox>
            <HBox AnchorPane.leftAnchor="0.0">
               <children>
                  <Label styleClass="content-header" text="İş Tanımları">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </AnchorPane>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="uiSearchInput" prefHeight="25.0" prefWidth="364.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <JFXButton fx:id="uiSearchBtn">
               <graphic>
                  <FontAwesomeIconView glyphName="SEARCH" styleClass="content-btn-icon-warning" />
               </graphic>
               <styleClass>
                  <String fx:value="content-btn" />
                  <String fx:value="content-btn-warning" />
               </styleClass>
            </JFXButton>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <VBox>
         <children>
            <VBox VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="TOP_CENTER" styleClass="tasks-thead">
                     <children>
                        <Label prefHeight="17.0" prefWidth="232.0" text="İş Tanımı" HBox.hgrow="ALWAYS" />
                        <Label layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="125.0" text="Grup" HBox.hgrow="ALWAYS" />
                        <FontAwesomeIconView glyphName="ARCHIVE" styleClass="tasks-thead-icon-group" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                        <FontAwesomeIconView glyphName="CLONE" layoutX="260.0" layoutY="20.0" styleClass="tasks-thead-icon-type" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                        <FontAwesomeIconView glyphName="SEARCH" layoutX="399.0" layoutY="20.0" styleClass="tasks-thead-icon-details" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
