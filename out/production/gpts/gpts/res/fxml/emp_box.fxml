<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="gpts.java.controllers.EmpBoxController" prefHeight="100.0" prefWidth="180.0" styleClass="emp-box" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefWidth="200.0">
         <children>
            <FontAwesomeIconView glyphName="USER" size="1.8em" styleClass="emp-box-icon" />
            <Label fx:id="uiEmpName" styleClass="emp-box-title" text="Veli Konstantin">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <HBox>
               <children>
                  <FontAwesomeIconView glyphName="USERS" size="1.2em" styleClass="emp-box-ico-stats" />
                  <Label fx:id="uiEmpGroup" styleClass="emp-box-sub-title" text="Sürücü">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0">
               <children>
                  <FontAwesomeIconView glyphName="TASKS" size="1.2em" styleClass="emp-box-ico-stats" />
                  <Label fx:id="uiEmpTaskCount" styleClass="emp-box-sub-title" text="5">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <JFXButton fx:id="uiEmpPlanBtn" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="20.0" ripplerFill="#196096" styleClass="emp-box-btn">
               <graphic>
                  <FontAwesomeIconView glyphName="CALENDAR" size="1.2em" styleClass="emp-box-btn-icon" />
               </graphic>
            </JFXButton>
            <JFXButton fx:id="uiEmpTasksBtn" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="20.0" ripplerFill="#19669d" styleClass="emp-box-btn">
               <graphic>
                  <FontAwesomeIconView glyphName="TASKS" size="1.2em" styleClass="emp-box-btn-icon" />
               </graphic>
            </JFXButton>
            <JFXButton fx:id="uiEmpDetailsBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="100.0" layoutY="10.0" prefHeight="20.0" prefWidth="20.0" ripplerFill="#19669d" styleClass="emp-box-btn">
               <graphic>
                  <FontAwesomeIconView glyphName="SEARCH" size="1.2em" styleClass="emp-box-btn-icon" />
               </graphic>
            </JFXButton>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
